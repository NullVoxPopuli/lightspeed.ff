{
  "manifest_version": 2,
  "name": "lightspeed.ff",
  "version": "0.0.1",
  "description": "lightspeed.nvim, but for the browser",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "128": "icons/falling-star-icon.png"
  },
  "applications": {
    "gecko": {
      "id": "nvp-permissionless@lightspeed.ff"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ]
}
